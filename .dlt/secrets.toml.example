# ============================================
# DLT Secrets Configuration Template
# ============================================
# Copy this file to secrets.toml and fill in your actual credentials
# DO NOT commit secrets.toml to version control!

# Credentials for the PostgreSQL destination
[destination.postgres.credentials]
database = "cinemax_db"
username = "postgres"
password = "password"
host = "db"  # Use "db" for Docker, "localhost" for local development
port = 5432

# Secret API key for Google Gemini, used in transformers
# Get your key at: https://makersuite.google.com/app/apikey
[sources.tmdb_pipeline.gemini]
api_key = "your_google_ai_studio_api_key_here"

# Secret API Token for TMDB, used by the main source
# Get your token at: https://www.themoviedb.org/settings/api
[sources.movie_pipeline.tmdb_discover]
api_token = "your_long_tmdb_api_read_access_token_here"
